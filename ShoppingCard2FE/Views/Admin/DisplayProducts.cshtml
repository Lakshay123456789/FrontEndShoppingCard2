@model List<ShoppingCartModels.EntityModels.Product>

@{
    ViewData["Title"] = "DisplayProducts";
}

<div class="d-flex justify-content-between">
@*    <h2>Hi, @Session["userName"]</h2>*@
    @Html.ActionLink("Logout", "Logout", "Authentication", "", new { @class = "btn btn btn-outline-danger" })
</div>

<p>
    @Html.ActionLink("Add New Product", "AddProduct", "Admin", new { @class = "btn btn btn-primary" })
</p>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Category</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.ProductDescription</td>
                <td>@product.ProductQuantity</td>
                <td>@product.ProductPrice</td>
                <td>@product.ProductCatagory</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.Id">Edit</a> |
                    <a asp-action="DeleteProduct" asp-route-id="@product.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>
